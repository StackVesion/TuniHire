pipeline {
    agent any
    stages {
        stage('Install dependencies') {
            steps {
                script {
                    dir('Back-end') { sh 'npm install' }
                    dir('Front-End') { sh 'npm install' }
                    dir('Admin-Panel') { sh 'npm install' }
                    dir('Company-Panel') { sh 'npm install' }
                }
            }
        }
        stage('Unit Test') {
            steps {
                script {
                    dir('Back-end') { sh 'npm test' }
                    dir('Front-End') { sh 'npm test' }
                    dir('Admin-Panel') { sh 'npm test' }
                    dir('Company-Panel') { sh 'npm test' }
                }
            }
        }
        stage('Build application') {
            steps {
                script {
                    dir('Back-end') { sh 'npm run build-dev' }
                    dir('Front-End') { sh 'npm run build-dev' }
                    dir('Admin-Panel') { sh 'npm run build-dev' }
                    dir('Company-Panel') { sh 'npm run build-dev' }
                }
            }
        }
    }
}
