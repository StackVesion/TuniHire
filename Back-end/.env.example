# Example environment file - DO NOT add real secrets here
# Copy this file to .env and add your real secrets there

# Server configuration
PORT=5000
NODE_ENV=development
MONGODB_URI=mongodb://tunihire_db:27017/tunihire_prod

# URLs
FRONTEND_URL=http://localhost:3000
GITHUB_CALLBACK_URL=http://localhost:5000/auth/github/callback

# Email configuration
SMTP_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_APP_USER=your-app-email@example.com
EMAIL_APP_PASSWORD=your-app-email-password

# Security
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here

# API Keys
OPENAI_API_KEY=your-openai-api-key-here

# OAuth Credentials
# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Github OAuth 2.0
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here
